<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_subtract_medicine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ethanfortin_nicaragua.elbluffhospital.AddPrescription"
    android:background="@drawable/greygradient">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="36sp"
        android:textColor="#121254"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="62dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Nuevo Prescripción" />

    <TextView
        android:text="ID o nombre del paciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="24sp"
        android:textColor="#121254"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/patIdOrName"
        android:hint="     llena identificación"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"/>

    <TextView
        android:text="ID de medicina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="24sp"
        android:textColor="#121254"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="40dp"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignRight="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/medId"
        android:hint="     llena identificación"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/patIdOrName" />

    <TextView
        android:text="cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="24sp"
        android:textColor="#121254"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="40dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignRight="@+id/textView6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/pillQuantity"
        android:hint="     llena cantidad"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/medId" />

    <TextView
        android:text="direcciones"
        android:id="@+id/tvDirections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#121254"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="40dp"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignRight="@+id/textView7"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etDirections"
        android:hint="     llena direcciones"
        android:layout_alignBottom="@+id/tvDirections"
        android:layout_alignLeft="@+id/pillQuantity" />

    <TextView
        android:text="duración"
        android:id="@+id/tvDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#121254"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="40dp"
        android:layout_alignTop="@+id/tvDirections"
        android:layout_alignRight="@+id/tvDirections"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etDuration"
        android:hint="     duración en días"
        android:layout_alignBottom="@+id/tvDuration"
        android:layout_alignLeft="@+id/etDirections" />

    <TextView
        android:text="médico"
        android:id="@+id/tvDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#121254"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="40dp"
        android:layout_alignTop="@+id/tvDuration"
        android:layout_alignRight="@+id/tvDuration"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etDoctor"
        android:hint="     nombre del médico"
        android:layout_alignBottom="@+id/tvDoctor"
        android:layout_alignLeft="@+id/etDuration" />

    <TextView
        android:text="razón"
        android:id="@+id/tvReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#121254"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="40dp"
        android:layout_alignTop="@+id/tvDoctor"
        android:layout_alignRight="@+id/tvDoctor"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etReason"
        android:hint="  razón por la medicina"
        android:layout_alignBottom="@+id/tvReason"
        android:layout_alignLeft="@+id/etDoctor" />

    <Button
        android:text="Confirmar"
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:id="@+id/button"
        android:textSize="30sp"
        android:textColor="#cccccc"
        android:background="#00004d"
        android:padding="1dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/tvReason"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
