<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_doctor_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#99ccff"
    tools:context="ethanfortin_nicaragua.elbluffhospital.DoctorMain">



    <TextView
        android:text="Nuevo Examen"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_width="wrap_content"
        android:backgroundTint="#cccccc"
        android:background="#cccccc"
        android:typeface="normal"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Informacion de Paciente"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:id="@+id/textView10"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:backgroundTint="#cccccc"
        android:background="#f2f2f2"
        android:typeface="normal"
        android:textSize="24sp"
        android:textAlignment="center"
        android:drawableLeft="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Anadir documento al archivo de paciente "
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:backgroundTint="#cccccc"
        android:background="#cccccc"
        android:typeface="normal"
        android:textSize="18sp"
        android:textAlignment="center"
        android:drawableLeft="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_marginBottom="93dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
