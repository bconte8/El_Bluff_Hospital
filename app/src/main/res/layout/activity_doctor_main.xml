<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_doctor_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#99ccff"
    tools:context="ethanfortin_nicaragua.elbluffhospital.DoctorMain">


    <ImageButton
        android:layout_width="200dip"
        android:layout_height="200dip"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/addfile"
        android:id="@+id/imageButton5"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imageButton4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:onClick="uploadOldFileHome"/>

    <TextView
        android:text="Informacion de Paciente"
        android:layout_height="100sp"
        android:id="@+id/textView10"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:backgroundTint="#cccccc"
        android:background="#f2f2f2"
        android:typeface="normal"
        android:textSize="36sp"
        android:textAlignment="center"
        android:drawableLeft="@android:color/black"
        android:layout_width="300sp"
        android:layout_marginTop="48dp"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Anadir documento al archivo de paciente "
        android:id="@+id/textView9"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:backgroundTint="#cccccc"
        android:background="#cccccc"
        android:typeface="normal"
        android:textSize="36sp"
        android:textAlignment="center"
        android:drawableLeft="@android:color/black"
        android:layout_width="325sp"
        android:layout_height="200sp"
        android:layout_alignTop="@+id/imageButton5"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />

    <ImageButton
        android:layout_width="200dip"
        android:layout_height="200dip"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/doctorandpatient"
        android:id="@+id/imageButton4"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginTop="40dp"
        android:onClick="patientHome"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
