<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fetch_specific_drug"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ethanfortin_nicaragua.elbluffhospital.FetchSpecificDrug">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/resID"
        android:textSize="24sp"
        android:textStyle="normal|bold|italic"
        android:text="........"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/txtID"
        android:layout_alignBottom="@+id/txtID"
        android:layout_toRightOf="@+id/bFind"
        android:layout_toEndOf="@+id/bFind"
        android:textColor="@color/cellBorder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/txtDrug"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:text="Medicina"
        android:layout_below="@+id/bFind"
        android:layout_alignLeft="@+id/etDrugID"
        android:layout_alignStart="@+id/etDrugID" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etDrugID"
        android:hint="ID de medicina"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/etDrugName"
        android:layout_alignLeft="@+id/etDrugName"
        android:layout_alignStart="@+id/etDrugName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etDrugName"
        android:hint="Nombre de medicina"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Title"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Encontrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/bFind"
        android:layout_below="@+id/etDrugID"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtQuantity"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:text="Cantidad"
        android:layout_below="@+id/txtID"
        android:layout_marginTop="35dp"
        android:layout_alignLeft="@+id/txtID"
        android:layout_alignStart="@+id/txtID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resDrug"
        android:textSize="24sp"
        android:textStyle="normal|bold|italic"
        android:text="........"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/txtDrug"
        android:layout_alignBottom="@+id/txtDrug"
        android:layout_toRightOf="@+id/bFind"
        android:layout_toEndOf="@+id/bFind"
        android:textColor="@color/cellBorder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Title"
        android:layout_weight="1"
        android:textSize="24sp"
        android:text="Da el nombre o el ID de la medicina"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resQuant"
        android:textSize="24sp"
        android:textStyle="normal|bold|italic"
        android:text="........"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/txtQuantity"
        android:layout_alignBottom="@+id/txtQuantity"
        android:layout_toRightOf="@+id/bFind"
        android:layout_toEndOf="@+id/bFind"
        android:textColor="@color/cellBorder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtID"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:text="Identificacion"
        android:layout_below="@+id/txtDrug"
        android:layout_marginTop="35dp"
        android:layout_alignLeft="@+id/txtDrug"
        android:layout_alignStart="@+id/txtDrug" />

</RelativeLayout>
