<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ethanfortin_nicaragua.elbluffhospital.MainMenu"
    android:background="#108acd"
    android:forceHasOverlappingRendering="false">

    <TextView
        android:layout_width="800dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="El Doctor"
        android:id="@+id/text_Doctor"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textIsSelectable="false"
        android:layout_above="@+id/button_Doctor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="800dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="La Farmacia"
        android:id="@+id/text_Farmacia"
        android:textAlignment="center"
        android:textSize="40sp"
        android:layout_above="@+id/button_Farmacia"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:text="New Button"
        android:id="@+id/button_Doctor"
        android:src="@drawable/doctor1"
        android:scaleType="fitCenter"
        android:background="#7cc0baba"
        android:clickable="true"
        android:longClickable="false"
        android:layout_above="@+id/text_Farmacia"
        android:layout_alignLeft="@+id/button_Farmacia"
        android:layout_alignStart="@+id/button_Farmacia"
        android:onClick="doctorHome" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:text="New Button"
        android:id="@+id/button_Farmacia"
        android:src="@drawable/farmacy"
        android:scaleType="fitCenter"
        android:background="#7cc0baba"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:contentDescription="main_doctor"
        android:onClick="MainMenu_PharmacyClick" />

    <TextView
        android:layout_width="800dp"
        android:layout_height="65dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Menu Principal"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:textSize="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
