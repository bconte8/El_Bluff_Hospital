<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_patient_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/greygradient"
    tools:context="ethanfortin_nicaragua.elbluffhospital.PatientGeneralInfo">

    <ImageButton
        android:id="@+id/button_InfoGeneral"
        android:layout_height="40dp"
        android:text="New Button"
        android:src="@drawable/manillafolder"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:onClick="Patient_GeneralInfo"
        android:padding="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="190dp"
        android:layout_toLeftOf="@+id/button_history"
        android:layout_toStartOf="@+id/button_history" />

    <TextView
        android:layout_width="200dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Informacion General"
        android:onClick="Patient_GeneralInfo"
        android:clickable="true"
        android:id="@+id/text_InfoGeneral"
        android:background="@android:color/transparent"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_height="25dp"
        android:layout_below="@+id/button_InfoGeneral"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/button_history"
        android:layout_height="40dp"
        android:text="New Button"
        android:src="@drawable/reloj"
        android:scaleType="fitCenter"
        android:background="@android:color/white"
        android:padding="1dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/text_InfoGeneral"
        android:layout_toEndOf="@+id/text_InfoGeneral"
        android:layout_width="200dp" />
    />
    <TextView
        android:layout_width="200dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Historia del Paciente"

        android:background="@android:color/white"
        android:id="@+id/text_history"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_height="25dp"
        android:layout_alignBaseline="@+id/text_perscription"
        android:layout_alignBottom="@+id/text_perscription"
        android:layout_toRightOf="@+id/text_InfoGeneral"
        android:layout_toEndOf="@+id/text_InfoGeneral" />

    <ImageButton
        android:id="@+id/button_prescription"
        android:layout_height="40dp"
        android:text="New Button"
        android:src="@drawable/pillbottle_mini"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:onClick="Patient_Perscription"
        android:padding="1dp"
        android:layout_width="190dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/text_history"
        android:layout_toEndOf="@+id/text_history" />



    <TextView
        android:layout_width="200dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Prescripciónes"
        android:onClick="Patient_Perscription"
        android:clickable="true"
        android:id="@+id/text_perscription"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_height="25dp"
        android:layout_below="@+id/button_prescription"
        android:layout_toRightOf="@+id/text_history"
        android:layout_toEndOf="@+id/text_history" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text_InfoGeneral"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TableRow
            android:layout_marginTop="15dp"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:minHeight="50dp"
            android:minWidth="300dp">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Fecha"
                android:id="@+id/text_start"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Razon "
                android:textSize="22sp"
                android:id="@+id/text_finish"
                android:background="@android:color/transparent"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medicina"
                android:id="@+id/text_medecine"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Porción"
                android:id="@+id/text_strength"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark"
                android:text="Cantidad"
                android:id="@+id/text_quantity"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="15dp"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:minHeight="50dp"
            android:minWidth="250dp">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="26/10/2016"
                android:onClick="moreinfo1"
                android:clickable="true"
                android:id="@+id/edit_start_date1"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="DedoRompido"
                android:onClick="moreinfo1"
                android:clickable="true"
                android:id="@+id/edit_finish_date1"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tylenol"
                android:onClick="moreinfo1"
                android:clickable="true"
                android:id="@+id/edit_medecine1"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="120mg"
                android:onClick="moreinfo1"
                android:clickable="true"
                android:id="@+id/edit_strength1"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="25 pills"
                android:onClick="moreinfo1"
                android:clickable="true"
                android:id="@+id/edit_quantity1"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"/>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

</RelativeLayout>

