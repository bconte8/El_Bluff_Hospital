<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_patient_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/greygradient"
    tools:context="ethanfortin_nicaragua.elbluffhospital.PatientGeneralInfo">

    <ImageButton
        android:id="@+id/button_InfoGeneral"
        android:layout_height="40dp"
        android:text="New Button"
        android:src="@drawable/manillafolder"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:onClick="Patient_GeneralInfo"
        android:padding="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="190dp"
        android:layout_toLeftOf="@+id/button_history"
        android:layout_toStartOf="@+id/button_history" />

    <TextView
        android:layout_width="200dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Informacion General"
        android:onClick="Patient_GeneralInfo"
        android:clickable="true"
        android:id="@+id/text_InfoGeneral"
        android:background="@android:color/transparent"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_height="25dp"
        android:layout_below="@+id/button_InfoGeneral"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/button_history"
        android:layout_height="40dp"
        android:text="New Button"
        android:src="@drawable/reloj"
        android:scaleType="fitCenter"
        android:background="@android:color/white"
        android:padding="1dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/text_InfoGeneral"
        android:layout_toEndOf="@+id/text_InfoGeneral"
        android:layout_width="200dp" />
    />
    <TextView
        android:layout_width="200dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Historia del Paciente"

        android:background="@android:color/white"
        android:id="@+id/text_history"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_height="25dp"
        android:layout_alignBaseline="@+id/text_perscription"
        android:layout_alignBottom="@+id/text_perscription"
        android:layout_toRightOf="@+id/text_InfoGeneral"
        android:layout_toEndOf="@+id/text_InfoGeneral" />

    <ImageButton
        android:id="@+id/button_prescription"
        android:layout_height="40dp"
        android:text="New Button"
        android:src="@drawable/pillbottle_mini"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:onClick="Patient_Perscription"
        android:padding="1dp"
        android:layout_width="190dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/text_history"
        android:layout_toEndOf="@+id/text_history" />



    <TextView
        android:layout_width="200dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PrescripciÃ³nes"
        android:onClick="Patient_Perscription"
        android:clickable="true"
        android:id="@+id/text_perscription"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_height="25dp"
        android:layout_below="@+id/button_prescription"
        android:layout_toRightOf="@+id/text_history"
        android:layout_toEndOf="@+id/text_history" />


</RelativeLayout>

