<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#108acd"
    tools:context="ethanfortin_nicaragua.elbluffhospital.PatientInfo">

    <TextView
        android:layout_width="800dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Buscar Paciente"
        android:id="@+id/text_title"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:textSize="35sp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Paciente ID "
        android:id="@+id/text_patientID"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_marginTop="96dp"
        android:layout_below="@+id/text_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre de Paciente"
        android:id="@+id/patient_name"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_alignTop="@+id/text_patientID"
        android:layout_alignRight="@+id/text_title"
        android:layout_alignEnd="@+id/text_title" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_name"
        android:layout_below="@+id/patient_name"
        android:textSize="25dp"
        android:hint="Nombre"
        android:layout_alignLeft="@+id/patient_name"
        android:layout_alignStart="@+id/patient_name" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:id="@+id/edit_ID"
        android:layout_alignTop="@+id/edit_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:textSize="25sp"
        android:hint="ID" />

    <TextView
        android:layout_width="800dp"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Entra ID o Nombre o los dos para buscar un paciente"
        android:id="@+id/text_instructions"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/patient_name"
        android:layout_below="@+id/text_title"
        android:textSize="25sp"
        android:textAlignment="center" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Buscar"
        android:id="@+id/button_search"
        android:textSize="35dp"
        android:background="#7cc0baba"
        android:onClick="Buscar"
        android:layout_below="@+id/edit_name"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
