<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ethanfortin_nicaragua.elbluffhospital.PharmacyMain"
    android:background="#108acd">

    <TextView
        android:layout_width="800dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ver Totales"
        android:id="@+id/text_inventory"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_below="@+id/text_farmaciaMain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="95dp"
        android:id="@+id/button_Totales"
        android:src="@drawable/inventory"
        android:scaleType="fitCenter"
        android:background="#7cc0baba"
        android:layout_below="@+id/text_inventory"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="800dp"
        android:layout_height="105dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Menu Principal de la Farmacia"
        android:id="@+id/text_farmaciaMain"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="35sp" />

    <TextView
        android:layout_width="800dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Añadir Medicina"
        android:id="@+id/text_Añadir"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_below="@+id/button_Totales"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="95dp"
        android:id="@+id/imageButton"
        android:src="@drawable/add"
        android:scaleType="fitCenter"
        android:background="#7cc0baba"
        android:layout_below="@+id/text_Añadir"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="800dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sacar Medicina"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_below="@+id/imageButton"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="95dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/substract"
        android:scaleType="fitCenter"
        android:background="#7cc0baba"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:layout_alignRight="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton" />
</RelativeLayout>
