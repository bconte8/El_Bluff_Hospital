<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_prescription_confirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ethanfortin_nicaragua.elbluffhospital.PrescriptionConfirmation"
    android:background="@drawable/greygradient">

    <TextView
        android:text="Medicina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:id="@+id/Drug"
        android:layout_below="@+id/Name"
        android:layout_alignLeft="@+id/Name"
        android:layout_alignStart="@+id/Name"
        android:textStyle="normal|italic"
        android:textColor="#121254"
        android:textSize="30sp" />

    <TextView
        android:text="Cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:id="@+id/Quant"
        android:layout_below="@+id/Drug"
        android:layout_alignLeft="@+id/Drug"
        android:layout_alignStart="@+id/Drug"
        android:textStyle="normal|italic"
        android:textColor="#121254"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Quant"
        android:layout_alignLeft="@+id/reName"
        android:layout_alignStart="@+id/reName"
        android:id="@+id/reDrug"
        android:textStyle="normal|bold"
        android:textColor="#121254"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Quant"
        android:layout_alignLeft="@+id/reDrug"
        android:layout_alignStart="@+id/reDrug"
        android:id="@+id/reQuant"
        android:textStyle="normal|bold"
        android:textColor="#121254"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:id="@+id/reName"
        android:layout_alignBaseline="@+id/Name"
        android:layout_alignBottom="@+id/Name"
        android:layout_toRightOf="@+id/Name"
        android:layout_toEndOf="@+id/Name"
        android:textStyle="normal|bold"
        android:textColor="#121254"/>

    <TextView
        android:text="Paciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="87dp"
        android:id="@+id/Name"
        android:layout_marginLeft="93dp"
        android:layout_marginStart="93dp"
        android:textStyle="normal|italic"
        android:textColor="#121254"
        android:textSize="30sp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Prescription Stored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:id="@+id/textView4"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        android:textColor="#121254"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed" />

    <Button
        android:text="OK"
        android:layout_height="100dp"
        android:layout_below="@+id/reQuant"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="166dp"
        android:id="@+id/rxgoback"
        android:textSize="30sp"
        android:textColor="#cccccc"
        android:background="#00004d"
        android:padding="1dp"
        android:layout_width="200dp"
        android:onClick="returnRXhome"/>
</RelativeLayout>
