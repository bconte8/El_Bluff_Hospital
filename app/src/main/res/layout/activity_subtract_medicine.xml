<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_subtract_medicine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ethanfortin_nicaragua.elbluffhospital.SubtractMedicine"
    android:background="@drawable/greygradient">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/medId"
        android:hint="     llena identificacion"
        android:layout_below="@+id/patIdOrName"
        android:layout_alignLeft="@+id/patIdOrName"
        android:layout_alignStart="@+id/patIdOrName"
        android:layout_marginTop="82dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/patIdOrName"
        android:hint="     llena identificacion"
        android:layout_marginTop="94dp"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginLeft="76dp"
        android:layout_marginStart="76dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/pillQuantity"
        android:hint="     llena cantidad"
        android:layout_below="@+id/medId"
        android:layout_alignLeft="@+id/medId"
        android:layout_alignStart="@+id/medId"
        android:layout_marginTop="81dp" />

    <TextView
        android:text="cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="24sp"
        android:textColor="#121254"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_alignTop="@+id/pillQuantity"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <Button
        android:text="Confirmar"
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:id="@+id/button"
        android:textSize="30sp"
        android:textColor="#cccccc"
        android:background="#00004d"
        android:padding="1dp"
        android:layout_below="@+id/pillQuantity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp" />

    <TextView
        android:text="Por favor complete la información"
        android:layout_width="500dp"
        android:id="@+id/textView18"
        android:typeface="serif"
        android:textSize="24sp"
        android:textColor="#121254"
        android:layout_height="100dp"
        android:textStyle="normal|italic"
        android:textAlignment="center"
        android:layout_above="@+id/textView5"
        android:layout_alignRight="@+id/patIdOrName"
        android:layout_alignEnd="@+id/patIdOrName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="36sp"
        android:textColor="#121254"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="44dp"
        android:text="Nuevo Prescripción"
        android:fontFamily="sans-serif-condensed"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="ID o nombre del paciente   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="24sp"
        android:textColor="#121254"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:layout_alignBaseline="@+id/patIdOrName"
        android:layout_alignBottom="@+id/patIdOrName"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />

    <TextView
        android:text="ID de medicina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="24sp"
        android:textColor="#121254"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignTop="@+id/medId"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />
</RelativeLayout>
