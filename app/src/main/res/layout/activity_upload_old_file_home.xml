<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_upload_old_file_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greygradient"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ethanfortin_nicaragua.elbluffhospital.UploadOldFileHome">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/patID"
        android:hint="Numero del identificacion"
        android:singleLine="true"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/date1st"
        android:hint="         MM/DD/YYYY"
        android:layout_alignBaseline="@+id/textView15"
        android:layout_alignBottom="@+id/textView15"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="La fecha del documento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:textSize="24sp"
        android:layout_marginTop="79dp"
        android:textColor="#121254"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="ID de paciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textSize="24sp"
        android:layout_marginTop="78dp"
        android:textColor="#121254"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/date1st"
        android:layout_toLeftOf="@+id/textView12"
        android:layout_toStartOf="@+id/textView12" />

    <Button
        android:text="Elege un documento"
        android:layout_width="175sp"
        android:layout_height="100sp"
        android:id="@+id/button3"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp"
        android:onClick="createFile"
        android:textColor="#cccccc"
        android:layout_below="@+id/patID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp"
        android:background="#00004d"
        android:padding="1dp"/>

    <TextView
        android:text="Nuevo PDF "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textSize="36sp"
        android:textColor="#121254"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="59dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:fontFamily="sans-serif-condensed" />

    <TextView
        android:text="Por favor complete la informaciÃ³n"
        android:layout_width="500dp"
        android:id="@+id/textView19"
        android:typeface="serif"
        android:textSize="24sp"
        android:textColor="#121254"
        android:layout_height="100dp"
        android:textStyle="normal|italic"
        android:textAlignment="center"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
