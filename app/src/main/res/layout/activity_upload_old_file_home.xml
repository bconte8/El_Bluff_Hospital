<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_upload_old_file_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greygradient"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ethanfortin_nicaragua.elbluffhospital.PatientInfo.UploadOldFileHome">

    <TextView
        android:text="Por favor complete la informaciÃ³n"
        android:layout_width="500dp"
        android:id="@+id/textView19"
        android:typeface="serif"
        android:textSize="24sp"
        android:textColor="#121254"
        android:layout_height="100dp"
        android:textStyle="normal|italic"
        android:textAlignment="center"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Nuevo PDF "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textSize="36sp"
        android:textColor="#121254"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:fontFamily="sans-serif-condensed"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/patID"
        android:hint="Numero o nombre del identificacion"
        android:singleLine="true"
        android:layout_below="@+id/textView12"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="68dp" />

    <TextView
        android:text="Nombre o ID de paciente"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/textView14"
        android:textSize="24sp"
        android:textColor="#121254"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_alignTop="@+id/patID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <DatePicker
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_marginTop="54dp"
        android:id="@+id/date1st"
        android:layout_below="@+id/textView15"
        android:layout_alignLeft="@+id/textView19"
        android:layout_alignStart="@+id/textView19"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        android:calendarViewShown="false"/>

    <TextView
        android:text="La fecha del documento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:textSize="24sp"
        android:textColor="#121254"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_below="@+id/patID"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <Button
        android:text="Elege un documento"
        android:layout_width="175sp"
        android:layout_height="100sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp"
        android:onClick="createFile"
        android:textColor="#cccccc"
        android:background="#00004d"
        android:padding="1dp"
        android:layout_marginBottom="37dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/button3" />

</RelativeLayout>
