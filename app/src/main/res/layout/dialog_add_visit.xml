<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/greygradient">

    <TextView
        android:text="La Fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vhDate"
        android:textSize="20sp"
        android:textColor="#00004d"
        android:layout_alignBaseline="@+id/vh_calPicker"
        android:layout_alignBottom="@+id/vh_calPicker"
        android:layout_alignRight="@+id/txtReason"
        android:layout_alignEnd="@+id/txtReason" />

    <TextView
        android:text="El Razon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtReason"
        android:textSize="20sp"
        android:textColor="#00004d"
        android:layout_alignBaseline="@+id/vh_reason"
        android:layout_alignBottom="@+id/vh_reason"
        android:layout_alignLeft="@+id/txt_dr"
        android:layout_alignStart="@+id/txt_dr" />

    <TextView
        android:text="El Doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:id="@+id/txt_dr"
        android:textSize="20sp"
        android:textColor="#00004d"
        android:layout_alignBaseline="@+id/vh_doctor"
        android:layout_alignBottom="@+id/vh_doctor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp" />

    <TextView
        android:text="El documento archivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PDF"
        android:textSize="20sp"
        android:textColor="#00004d"
        android:layout_alignTop="@+id/switch2"
        android:layout_toRightOf="@+id/switch2"
        android:layout_toEndOf="@+id/switch2"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <!--These are the variable quantities-->

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/vh_reason"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_gravity ="end"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/vh_calPicker"
        android:layout_alignLeft="@+id/vh_calPicker"/>
        <!--android:layout_alignStart="@+id/ddate"-->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vh_doctor"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_gravity ="end"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/vh_reason"
        android:layout_alignLeft="@+id/vh_reason"/>
        <!--android:layout_alignStart="@+id/dReason"-->

    <!--android:layout_alignStart="@+id/dDoctor"-->

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/vh_calPicker"
        android:layout_weight="1"
        android:hint="Click para elegir"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_gravity ="end"
        android:textSize="20sp"
        android:clickable="true"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_dr"
        android:layout_alignStart="@+id/txt_dr"
        android:layout_below="@+id/vh_doctor"
        android:layout_marginTop="39dp"
        android:textOff="No PDF"
        android:textOn="PDF"
        android:textSize="10sp"
        android:thumbTextPadding="0dp"
        android:trackTint="#00004d" />


</RelativeLayout>
