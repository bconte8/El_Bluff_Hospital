<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/text_choosekids"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_scrollFlags="scroll">

    <TextView
        android:id="@+id/text_childPicker"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_InfoGeneral"
        android:background="@android:color/transparent"
        android:text="Elige el numero de hijos "
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ethanfortin_nicaragua.elbluffhospital.NumberPicker
        android:id="@+id/child_np"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/transparent"
        android:inputType="number"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="40sp"
        android:visibility="visible" />
</LinearLayout>