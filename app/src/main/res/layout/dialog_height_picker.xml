<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/text_choosekids"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_scrollFlags="scroll">

    <TextView
        android:id="@+id/text_weightPicker"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_InfoGeneral"
        android:background="@android:color/transparent"
        android:text="Elige la altura en Centimetros"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <ethanfortin_nicaragua.elbluffhospital.NumberPicker
        android:id="@+id/height_np"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:background="@android:color/transparent"
        android:inputType="number"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="40sp"
        android:visibility="visible"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="75dp"
        android:layout_alignTop="@+id/text_weightPicker"/>

    <TextView
        android:id="@+id/text_decimalpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/height_np"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/height_np"
        android:layout_toRightOf="@+id/height_np"
        android:background="@android:color/transparent"
        android:text="."
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="60sp"
        android:textStyle="bold" />

    <ethanfortin_nicaragua.elbluffhospital.NumberPicker
        android:id="@+id/height_decimal_np"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:background="@android:color/transparent"
        android:inputType="number"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="40sp"
        android:visibility="visible"
        android:layout_alignBaseline="@+id/height_np"
        android:layout_alignBottom="@+id/height_np"
        android:layout_toRightOf="@+id/text_decimalpoint"
        android:layout_toEndOf="@+id/text_decimalpoint"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />
</RelativeLayout>