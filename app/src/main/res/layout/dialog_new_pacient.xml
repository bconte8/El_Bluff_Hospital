<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/table_general1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TableRow
            android:layout_marginTop="15dp"
            android:layout_height="30dp"
            android:layout_width="fill_parent">
            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nombre:"
                android:id="@+id/text_name"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ID:"
                android:id="@+id/text_ID"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />
        </TableRow>
        <TableRow
            android:layout_marginTop="15dp"
            android:layout_height="30dp"
            android:layout_width="fill_parent">

            <EditText
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/newdialog_edit_name"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:hint="Click to type"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:inputType="text"
                android:textStyle="bold" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:inputType="text"
                android:hint="Click to type"
                android:id="@+id/newdialog_edit_ID"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_marginTop="15dp"
            android:layout_height="30dp"
            android:layout_width="fill_parent">
            <TextView
               android:layout_width="300dp"
                android:layout_height="30dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Dirección:"
                android:id="@+id/text_adress"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tele:"
                android:id="@+id/text_Telephone"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="15dp"
            android:layout_height="30dp"
            android:layout_width="fill_parent">
            <EditText
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:hint="Click to type"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/newdialog_edit_adress"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />
            <EditText
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:hint="Click to type"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:inputType="text"
                android:id="@+id/newdialog_edit_Telephone"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:layout_marginTop="15dp"
            android:layout_height="30dp"
            android:layout_width="fill_parent">
            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Género:"
                android:id="@+id/text_gender"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Casado:"
                android:id="@+id/text_Married"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

        </TableRow>
        <TableRow
            android:layout_marginTop="15dp"
            android:layout_height="30dp"
            android:layout_width="fill_parent">

            <EditText
               android:layout_width="300dp"
                android:layout_height="30dp"
                android:hint="Click to type"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:inputType="text"
                android:id="@+id/newdialog_edit_gender"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/text_gender"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:hint="Click to type"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:inputType="text"
                android:id="@+id/newdialog_edit_Married"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/text_Married"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_marginTop="15dp"
            android:layout_height="30dp"
            android:layout_width="fill_parent">
            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Fecha de Nacimiento:"
                android:id="@+id/text_Birthdate"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/newdialog_edit_gender"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Ninos:"
                android:id="@+id/text_Children"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/newdialog_edit_Married"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="15dp"
            android:layout_height="30dp"
            android:layout_width="fill_parent">
            <EditText
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:hint="Click to type"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:inputType="date"
                android:id="@+id/newdialog_edit_Birthdate"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/text_Birthdate"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />
            <EditText
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:hint="Click to type"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/newdialog_edit_Children"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/text_Children"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:inputType="number" />
        </TableRow>
        <TableRow
            android:layout_marginTop="15dp"
            android:layout_height="30dp"
            android:layout_width="fill_parent">
            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Altura"
                android:id="@+id/text_Height"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/dialog_edit_Birthdate"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pesadura"
                android:id="@+id/text_Weight"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/dialog_edit_Children"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="15dp"
            android:layout_height="30dp"
            android:layout_width="fill_parent">

            <EditText
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:hint="Click to type"
                android:inputType="number"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/newdialog_edit_Height"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/text_Height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:hint="Click to type"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/newdialog_edit_Weight"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/text_Weight"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:inputType="number" />
        </TableRow>
        <TableRow
            android:layout_marginTop="15dp"
            android:layout_height="40dp"
            android:layout_width="fill_parent">

            <TextView
                android:layout_height="40dp"
                android:layout_width="200dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Alergias:"
                android:id="@+id/text_allergies"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:layout_below="@+id/dialog_edit_Height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_height="40dp"
                android:layout_width="200dp"
                android:hint="Click to type"
                android:inputType="text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/newdialog_edit_Allergies"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_below="@+id/dialog_edit_Weight"
                android:layout_alignBaseline="@+id/text_allergies"
                android:layout_alignBottom="@+id/text_allergies"
                android:layout_toRightOf="@+id/text_MedicalConditions"
                android:layout_toEndOf="@+id/text_MedicalConditions" />
        </TableRow>
        <TableRow
            android:layout_marginTop="15dp"
            android:layout_height="40dp"
            android:layout_width="fill_parent">

            <TextView
                android:layout_height="40dp"
                android:layout_width="200dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Condiciones Medicos:"
                android:id="@+id/text_MedicalConditions"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_below="@+id/text_allergies"
                android:layout_marginBottom="271dp" />

            <EditText
                android:layout_height="40dp"
                android:layout_width="200dp"
                android:hint="Click to type "
                android:inputType="text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/newdialog_edit_MedicalConditions"
                android:background="@android:color/transparent"
                android:textSize="22sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_below="@+id/dialog_edit_Allergies"
                />
        </TableRow>
    </TableLayout>
</LinearLayout>
